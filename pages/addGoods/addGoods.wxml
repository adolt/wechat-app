<view class="weui-cells__title">表单</view>
<view class="weui-cells weui-cells_after-title">
  <view class="weui-cell weui-cell_input">
    <view class="weui-cell__hd">
      <view class="weui-label">名称</view>
    </view>
    <view class="weui-cell__bd">
      <input class="weui-input" bindinput="inputName" value="{{ goodName }}" placeholder="名称" />
    </view>
  </view>
  <view class="weui-cell weui-cell_input weui-cell_vcode">
    <view class="weui-cell__hd">
      <view class="weui-label">数量</view>
    </view>
    <view class="weui-cell__bd">
      <input class="weui-input" bindinput="inputCnt" value="{{ goodCnt }}" placeholder="斤" />
    </view>
  </view>
  <view class="weui-cell weui-cell_input weui-cell_vcode">
    <view class="weui-cell__hd">
      <view class="weui-label">价格</view>
    </view>
    <view class="weui-cell__bd">
      <input class="weui-input" bindinput="inputPrice" value="{{ price }}" placeholder="元/斤" />
    </view>
  </view>
</view>
<button class="weui-btn" type="primary" bindtap="onConfirm">确定</button>